{
    "arrow_spacing":                      {"level": "error"},
    "camel_case_classes":                 {"level": "error"},
    "coffeescript_error":                 {"level": "error"},
    "colon_assignment_spacing":           {"level": "ignore"},
    "cyclomatic_complexity":              {"level": "ignore"},
    "duplicate_key":                      {"level": "error"},
    "empty_constructor_needs_parens":     {"level": "error"},
    "indentation":                        {"level": "error", "value": 2},
    "line_endings":                       {"level": "error", "value": "unix"},
    "max_line_length":                    {"level": "warn", "value": 80},
    "missing_fat_arrows":                 {"level": "ignore"},
    "newlines_after_classes":             {"level": "ignore"},
    "no_backticks":                       {"level": "error"},
    "no_debugger":                        {"level": "error"},
    "no_empty_functions":                 {"level": "ignore"},
    "no_empty_param_list":                {"level": "error"},
    "no_implicit_braces":                 {"level": "ignore"},
    "no_implicit_parens":                 {"level": "error"},
    "no_interpolation_in_single_quotes":  {"level": "error"},
    "no_plusplus":                        {"level": "ignore"},
    "no_stand_alone_at":                  {"level": "error"},
    "no_tabs":                            {"level": "error"},
    "no_throwing_strings":                {"level": "error"},
    "no_trailing_semicolons":             {"level": "error"},
    "no_trailing_whitespace":             {"level": "error"},
    "no_unnecessary_double_quotes":       {"level": "error"},
    "no_unnecessary_fat_arrows":          {"level": "error"},
    "non_empty_constructor_needs_parens": {"level": "error"},
    "prefer_english_operator":            {"level": "ignore"},
    "space_operators":                    {"level": "error"},

    "forbidden_keywords": {
      "module": "coffeelint-forbidden-keywords",
      "level": "error",
      "forbidden": {
        "yes":  "true",
        "on":   "true",
        "no":   "false",
        "off":  "false",
        "is":   "==",
        "isnt": "!=",
        "!":    "not",
        "&&":   "and",
        "||":   "or"
      },
      "newline_at_eof": {
        "module": "coffeelint-newline-at-eof",
        "level": "error",
        "behaviour": "require"
      }
    }
}
